declare -a space=(
  "    "
  "    "
  "    "
  "    "
  "    "
  "    "
  "    "
  "    "
  "    "
)

declare -a dot=(
  "    "
  "    "
  "    "
  "    "
  "    "
  "    "
  "    "
  " ## "
  " ## "
)

usage() { echo "Usage: <string> [-i]" 1>&2; exit 1; }

while getopts ":i" opt; do
  case ${opt} in
    i ) italic=1
      ;;
    \? ) usage
      ;;
  esac
done

shift $((OPTIND -1))

for (( i1=0; i1 < 9; i1++ )); do
  line=""

  if [[ $italic -eq 1 ]]; then
    while [ ${#line} -lt $((8 - i1)) ]; do
      line+=" "
    done
  fi

	for (( i2=0; i2 < ${#1}; i2++ )); do
    char="${1:i2:1}"

    case $char in
      " ")      
        char="space"
        ;;
      ".")      
        char="dot"
        ;;
    esac

    letter=$char[$i1]
	  line+="${!letter}"
	done

  echo $line
done